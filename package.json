{
  "name": "stylelint-scss-no-relative-imports",
  "version": "1.0.0",
  "description": "A rule which allow fix and warn relative imports of SCSS for Stylelint",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "lint": "npx eslint '**/*.js'",
    "lint:fix": "npx eslint '**/*.js' --fix",
    "prepare": "husky install"
  },
  "author": "Alexey Chichenkov",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@babel/preset-env": "^7.18.10",
    "babel-jest": "^28.1.3",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "latest",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-no-relative-import-paths": "^1.3.4",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-unicorn": "^43.0.2",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "jest-preset-stylelint": "^5.0.4",
    "stylelint": "^14.9.1"
  },
  "dependencies": {
    "app-root-path": "^3.0.0"
  },
  "jest": {
    "preset": "jest-preset-stylelint",
    "clearMocks": true,
    "collectCoverage": false,
    "collectCoverageFrom": [
      "rules/**/*.js"
    ],
    "coverageDirectory": "./coverage/",
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "testEnvironment": "node",
    "roots": [
      "rules"
    ],
    "testRegex": "rules/.*/__tests__/.*\\.js$"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && test"
    }
  }
}
